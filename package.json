    "@types/prettier": "^3.0.0",
    "cspell": "^6.31.2",
    "eslint": "^8.46.0",
    "jest": "^29.6.3",
    "npm-package-json-lint": "^7.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "packageManager": "yarn@3.6.0",
  "engines": {
    "node": "^20"
  },
  "dependencies": {
    "@apollo/server": "^4.9.1",
    "graphql": "^16.8.0",
